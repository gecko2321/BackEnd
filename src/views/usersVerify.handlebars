<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <section class="d-flex flex-column align-items-center w-50">
    <h1
      class="bg-success-subtle p-2 text-center text-success w-100"
    >VERIFICACION DE USUARIO</h1>
    <form class="d-flex flex-column w-50 m-3">
      <input
        class="m-2 p-2 text-center"
        type="email"
        id="email"
        placeholder="e-Mail"
      />
      <input
        class="m-2 p-2 text-center"
        type="text"
        id="verifycode"
        placeholder="Verification Code"
      />
      <input
        class="m-2 p-2 text-center btn btn-success"
        type="button"
        id="verify"
        value="Verify!"
      />
    </form>
  </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/scripts/usersVerify.js"></script>