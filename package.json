{
  "name": "backend",
  "version": "1.0.0",
  "description": "Repositorio para el curso de BackEnd de CoderHouse",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node ./server.js -p 9000 --env=prod --persistence mongo",
    "dev": "nodemon ./server.js --env=dev",
    "devfs": "nodemon ./server.js --ignore *.json --env=dev --persistence fs",
    "devmem": "nodemon ./server.js --env=dev --persistence memory",
    "products": "node ./src/mocks/products.mock.js",
    "users": "node ./src/mocks/users.mock.js",
    "simplex": "artillery quick --count 20 --num 100 http://localhost:8080/api/simplex -o ./test/artillery/simplex.json",
    "complex": "artillery quick --count 20 --num 100 http://localhost:8080/api/complex -o ./test/artillery/complex.json",
    "flow": "artillery run ./test/artillery/flow.yaml -o ./test/artillery/flow.json",
    "report": "artillery report ./test/artillery/flow.json",
    "image": "docker build -t ceramicagloria .",
    "mocha": "mocha ./test/mocha/products.test.js",
    "chai": "mocha ./test/chai",
    "super": "mocha ./test/supertest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "artillery-plugin-metrics-by-endpoint": "^1.10.0",
    "bcrypt": "^5.1.1",
    "commander": "^12.1.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "express-compression": "^1.0.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.18.0",
    "joi": "^17.13.3",
    "joi-oid": "^1.1.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "mongoose-paginate-v2": "^1.8.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "session-file-store": "^1.5.0",
    "socket.io": "^4.7.5",
    "stripe": "^16.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "chai": "^5.1.1",
    "mocha": "^10.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0"
  }
}
